@model IEnumerable<Sporto_irangos_prekyba.Models.Miestas>

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Miestai"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

@* content itself *@
<div class="main-content-lst">
	<table class="entity-list">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(m => m.Miesto_id)
				</th>
				<th>
					@Html.DisplayNameFor(m => m.Pavadinimas)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<th>
					@Html.DisplayFor(m => item.Miesto_id)
				</th>
				<td>
					@Html.DisplayFor(m => item.Pavadinimas)
				</td>
				<td>
					<a href="@Url.Action("Edit", new { id = item.Miesto_id })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
					<a href="@Url.Action("Delete", new { id = item.Miesto_id })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>

@model Sporto_irangos_prekyba.Models.Parametras.ParametrasCE

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Parametro sukūrimas"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()
	
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset>
		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Svoris)
			@Html.EditorFor(m => m.Parametras.Svoris)
			@Html.ValidationMessageFor(m => m.Parametras.Svoris, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Ilgis)
			@Html.EditorFor(m => m.Parametras.Ilgis)
			@Html.ValidationMessageFor(m => m.Parametras.Ilgis, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Patvarumas)
			@Html.EditorFor(m => m.Parametras.Patvarumas)
			@Html.ValidationMessageFor(m => m.Parametras.Patvarumas, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Medziaga)
			@Html.DropDownListFor(m => m.Parametras.Medziaga, Model.Lists.Medziagos, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Parametras.Medziaga, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Plotis)
			@Html.EditorFor(m => m.Parametras.Plotis)
			@Html.ValidationMessageFor(m => m.Parametras.Plotis, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Parametras.Spalva)
			@Html.DropDownListFor(m => m.Parametras.Spalva, Model.Lists.Spalvos, (string)ViewData["none-chosen"])
			@Html.ValidationMessageFor(m => m.Parametras.Spalva, "")
		</div>

	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>